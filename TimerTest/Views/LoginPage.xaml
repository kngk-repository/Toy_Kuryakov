<Page x:Class="Toy.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Toy.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid Background="LightPink">
        <StackPanel >

            <TextBlock Text="Login:"
                       FontSize="30"/>
            <TextBox Name="ALogin"
                     Width="493"
                     Height="40"
                     FontSize="20">
            </TextBox>

            <TextBlock Text="Pass:"
                       FontSize="30"/>
            <PasswordBox x:Name="APassword"
                         Width="506"
                         Height="40"/>
            <Button Content="Enter to shop"
                    Background="GreenYellow"
                    FontSize="30"
                    Click="Login_Btn" Height="62" Width="528"/>

        </StackPanel>
    </Grid>
</Page>
